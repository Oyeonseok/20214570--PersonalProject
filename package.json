{
  "name": "securecode-guardian-mcp",
  "version": "0.1.0",
  "description": "시큐어코딩 MCP 서버 - 웹 개발자를 위한 실시간 보안 분석 도구",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "securecode-guardian": "dist/index.js"
  },
  "scripts": {
    "build": "tsup && shx mkdir -p dist/app/public && shx cp -r src/app/public/* dist/app/public/",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "start:web": "node dist/app/server.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "security",
    "secure-coding",
    "vulnerability-scanner",
    "owasp",
    "sast"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.13.5",
    "shx": "^0.4.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  }
}
